@model SmartStore.Model.Entities.Feature

<h4 style="text-align: center;margin-top: -60px;">Edit Feature: @Model.FeatureTitle</h4>

@using (Html.BeginForm("Edit", "Features", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <hr/>
        @Html.ValidationSummary(true, "", new {@class = "text-danger"})
        @Html.HiddenFor(model => model.Id)
        <div class="form-group">
            @Html.LabelFor(model => model.FeatureTitle, htmlAttributes: new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.EditorFor(model => model.FeatureTitle, new {htmlAttributes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(model => model.FeatureTitle, "", new {@class = "text-danger"})
            </div>
        </div>
        <hr/>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10" style="margin-bottom: -20px;">
                <input type="submit" value="Save" class="btn btn-primary"/>
                <input type="submit" value="Cancel" class="btn btn-default" data-dismiss="modal"/>
            </div>
        </div>
    </div>
}


<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

