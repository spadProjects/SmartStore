@model PagedList.IPagedList<SmartStore.Model.Entities.Product>
@using PagedList.Mvc

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@{
    int rowno = 0;
}

<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto|Varela+Round">
<link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
<link href="~/Content/Table/Table.css" rel="stylesheet" />

<script type="text/javascript">
    $(document).ready(function () {
        $('[data-toggle="tooltip"]').tooltip();
    });
</script>
<div class="container">
    <div class="table-wrapper">
        <div class="table-title">
            <div class="row">
                <div class="col-sm-5">
                    <h2>Products <b>Management</b></h2>
                </div>
                <div class="col-sm-7">
                    <a href="/Admin/Products/Create" class="btn btn-primary"><i class="material-icons">&#xE147;</i><span>Add Product</span></a>
                </div>
            </div>
        </div>

        <table class="table table-striped table-hover">
            @*<div class="col-sm-3">
                    <div style="float: left;" class="show-entries">
                        <span>Show</span>
                        <select class="form-control">
                            <option>5</option>
                            <option>10</option>
                            <option>15</option>
                            <option>20</option>
                        </select>
                        <span>entries</span>
                    </div>
                </div>*@
            @*<button style="float: right;" type="button" class="btn btn-primary"><i class="fa fa-search"></i></button>
                <div style="float: right;margin-right: 10px;margin-bottom: 10px;" class="filter-group">
                    <input type="text" class="form-control">
                </div>*@
            <thead>
                <tr>
                    <th>#</th>
                    <th>Product Image</th>
                    @*<th>Product Name</th>*@
                    <th>Product SubGroup</th>
                    <th>Product Brand</th>
                    <th>Product Price</th>
                    @*<th>Product DiscountPercent</th>*@
                    @*<th>Product Order</th>
                    <th>Product Cost</th>*@
                    @*<th>Status Show</th>*@
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@(rowno += 1)</td>
                        <td><a href="#"><img src="~/Images/Product/@item.ProductImg" alt="Avatar" width="100" height="100"></a></td>
                        @*<td>@Html.DisplayFor(modelItem => item.ProductName)</td>*@
                        <td>@Html.DisplayFor(modelItem => item.ProductName)</td>
                        <td>@Html.DisplayFor(modelItem => item.BrandId)</td>
                        <td>£@Html.DisplayFor(modelItem => item.ProductPrice)</td>
                        @*<td>%@Html.DisplayFor(modelItem => item.ProductDiscountPercent)</td>*@
                        @*<td>@Html.DisplayFor(modelItem => item.ProductOrder)</td>*@
                        @*<td>@Html.DisplayFor(modelItem => item.ProductCost)</td>*@

                        @*@{
                            if (item.ProductNotShow == false)
                            {
                                <td>
                                    <span class="status text-success">&bull;</span> Active
                                </td>
                            }
                            else
                            {
                                <td>
                                    <span class="status text-warning">&bull;</span> Inactive
                                </td>
                            }
                        }*@
                        <td>
                            <a href="/Admin/Galleries/Index/@item.Id" class="view" title="Gallery" data-toggle="tooltip">
                                <i class="material-icons">&#xe8fc;</i>
                            </a>
                            <a href="/Admin/Products/Edit/@item.Id" class="edit" title="Edit" data-toggle="tooltip">
                                <i class="material-icons">&#xE254;</i>
                            </a>
                            <a href="#" onclick='Delete(@item.Id)' class="delete" title="Delete" data-toggle="tooltip">
                                <i class="material-icons">&#xE5C9;</i>
                            </a>
                            <a href="/Admin/Products/ProductDetails/@item.Id" class="view" title="View Details" data-toggle="tooltip"><i class="material-icons">&#xE5C8;</i></a>
                            @*<a href="/Admin/ProductFeatures/Index/@item.Id" class="view" title="ProductField" data-toggle="tooltip"><i class="material-icons">&#xe241;</i></a>*@
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="clearfix">
            <div class="hint-text">Showing <b>@(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber )</b> out of <b>@Model.PageCount</b> entries</div>
            <ul class="pagination">
                @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @class = "page-item" }))
            </ul>
        </div>
    </div>
</div>


<div id="normalModal" class="modal fade" aria-hidden="true" style="display: none;margin-top: -60px;">
    <div class="modal-dialog" style="width: 600px;margin: 150px auto;">
        <div class="modal-content">
            <button style="text-align: right;margin-right: 20px;padding: 20px;" type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            <div class="modal-header" id="modalHeader" style="font-size: 20px;">
            </div>
            <div class="modal-body" id="bodymodal">
            </div>
            <div class="modal-footer" style="text-align: left;" id="modalFooter">
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

<div id="normalModal" class="modal fade">
    <div class="modal-dialog modal-confirm">
        <div class="modal-content" style="width: 400px;margin: 30px auto;">
            <div class="modal-header" id="modalHeader" style="border-bottom: none;">
            </div>
            <div class="modal-footer" id="modalFooter">
            </div>
        </div>
    </div>
</div>


@section modalscript{
    <script>
        function Delete(id) {
            $.ajax({
                url: "/Admin/Products/Delete/" + id,
                type: "Get",
                data: {}
            }).done(function (result) {
                $('#normalModal').modal('show');
                $('#modalHeader').html('');
                $('#modalFooter').html(result);
            });
        }

        $(document).ready(function () {
            $('[data-toggle="tooltip"]').tooltip();
            // Animate select box length
            var searchInput = $(".search-box input");
            var inputGroup = $(".search-box .input-group");
            var boxWidth = inputGroup.width();
            searchInput.focus(function () {
                inputGroup.animate({
                    width: "300"
                });
            }).blur(function () {
                inputGroup.animate({
                    width: boxWidth
                });
            });
        });
    </script>
}

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
