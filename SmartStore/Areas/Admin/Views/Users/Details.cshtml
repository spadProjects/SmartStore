@model SmartStore.Model.Entities.User

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@{
    int rowno = 0;
}

<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto|Varela+Round">
<link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
<link href="~/Content/Admin/css/Table.css" rel="stylesheet" />

<script type="text/javascript">
    $(document).ready(function () {
        $('[data-toggle="tooltip"]').tooltip();
    });
</script>
<div class="container">
    <div class="table-wrapper">
        <div class="table-title">
            <div class="row">
                <div class="col-sm-5">
                    <h2>Users <b>Management</b></h2>
                </div>
                @*<div class="col-sm-7">
                        <a href="/Admin/Users/Create" class="btn btn-primary"><i class="material-icons">&#xE147;</i><span>Add User</span></a>
                    </div>*@
            </div>
        </div>

        <table class="table table-striped table-hover">
            @*<div class="col-sm-3">
                    <div style="float: left;" class="show-entries">
                        <span>Show</span>
                        <select class="form-control">
                            <option>5</option>
                            <option>10</option>
                            <option>15</option>
                            <option>20</option>
                        </select>
                        <span>entries</span>
                    </div>
                </div>*@
            @*<button style="float: right;" type="button" class="btn btn-primary"><i class="fa fa-search"></i></button>
                <div style="float: right;margin-right: 10px;margin-bottom: 10px;" class="filter-group">
                    <input type="text" class="form-control">
                </div>*@
            <thead>
                <tr>
                    <th>#</th>
                    <th>User IdentifierCode</th>
                    <th>User DateofBirth</th>
                    <th>User FatherName</th>
                    <th>User LandlinePhone</th>
                    <th>User NationalCode</th>
                    <th>User PostalCode</th>
                    <th>UserAddress</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@(rowno += 1)</td>
                    <td>@Html.DisplayFor(model => model.UserIdentifierCode)</td>
                    <td>@Html.DisplayFor(model => model.UserDateofBirth)</td>
                    <td>@Html.DisplayFor(model => model.UserFatherName)</td>
                    <td>@Html.DisplayFor(model => model.UserLandlinePhone)</td>
                    <td>@Html.DisplayFor(model => model.UserNationalCode)</td>
                    <td>@Html.DisplayFor(model => model.UserPostalCode)</td>
                    <td>@Html.DisplayFor(model => model.UserAddress)</td>

                </tr>
            </tbody>
        </table>
        <div class="clearfix">
            <div class="hint-text">Showing <b>5</b> out of <b>25</b> entries</div>
            <ul class="pagination">
                <li class="page-item disabled"><a href="#">Previous</a></li>
                <li class="page-item"><a href="#" class="page-link">1</a></li>
                <li class="page-item"><a href="#" class="page-link">2</a></li>
                <li class="page-item active"><a href="#" class="page-link">3</a></li>
                <li class="page-item"><a href="#" class="page-link">4</a></li>
                <li class="page-item"><a href="#" class="page-link">5</a></li>
                <li class="page-item"><a href="#" class="page-link">Next</a></li>
            </ul>
        </div>
    </div>
</div>


<div id="normalModal" class="modal fade" aria-hidden="true" style="display: none;margin-top: -60px;">
    <div class="modal-dialog" style="width: 600px;margin: 150px auto;">
        <div class="modal-content">
            <button style="text-align: right;margin-right: 20px;padding: 20px;" type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            <div class="modal-header" id="modalHeader" style="font-size: 20px;">
            </div>
            <div class="modal-body" id="bodymodal">
            </div>
            <div class="modal-footer" style="text-align: left;" id="modalFooter">
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

<div id="normalModal" class="modal fade">
    <div class="modal-dialog modal-confirm">
        <div class="modal-content" style="width: 400px;margin: 30px auto;">
            <div class="modal-header" id="modalHeader" style="border-bottom: none;">
            </div>
            <div class="modal-footer" id="modalFooter">
            </div>
        </div>
    </div>
</div>


@section modalscript{
    <script>
        function Create() {
            $.ajax({
                url: "/Admin/Users/Create/",
                type: "Get",
                data: {}
            }).done(function (result) {
                $('#normalModal').modal('show');
                $('#modalHeader').html('');
                $('#modalFooter').html(result);
            });
        }

        function Edit(id) {
            $.ajax({
                url: "/Admin/Users/Edit/" + id,
                type: "Get",
                data: {}
            }).done(function (result) {
                $('#normalModal').modal('show');
                $('#modalHeader').html('');
                $('#modalFooter').html(result);
            });
        }

        function Delete(id) {
            $.ajax({
                url: "/Admin/Users/Delete/" + id,
                type: "Get",
                data: {}
            }).done(function (result) {
                $('#normalModal').modal('show');
                $('#modalHeader').html('');
                $('#modalFooter').html(result);
            });
        }

        $(document).ready(function () {
            $('[data-toggle="tooltip"]').tooltip();
            // Animate select box length
            var searchInput = $(".search-box input");
            var inputGroup = $(".search-box .input-group");
            var boxWidth = inputGroup.width();
            searchInput.focus(function () {
                inputGroup.animate({
                    width: "300"
                });
            }).blur(function () {
                inputGroup.animate({
                    width: boxWidth
                });
            });
        });
    </script>
}

