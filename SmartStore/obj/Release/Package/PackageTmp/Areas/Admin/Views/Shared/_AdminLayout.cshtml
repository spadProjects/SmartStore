@using SmartStore.DataAccess.Context

@{
    SmartStoreContext db = new SmartStoreContext();
    var user = db.Users.FirstOrDefault(u => u.UserEmail == User.Identity.Name);
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Start your development with a Dashboard for Bootstrap 4.">
    <meta name="author" content="Creative Tim">
    <title>Admin</title>
    <!-- Favicon -->
    <link href="~/Content/Home/images/favicon.ico" rel="icon" type="image/png">
    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700" rel="stylesheet">
    <!-- Icons -->
    <link href="~/Content/Admin/vendor/nucleo/css/nucleo.css" rel="stylesheet">
    <link href="~/Content/Admin/vendor/fortawesome/fontawesome-free/css/all.min.css" rel="stylesheet">
    <!-- Argon CSS -->
    <link type="text/css" href="~/Content/Admin/css/argon.css" rel="stylesheet">
</head>
<body>
    <!-- Sidenav -->
    <nav class="navbar navbar-vertical fixed-left navbar-expand-md navbar-light bg-white" id="sidenav-main">
        <div class="container-fluid">
            <!-- Toggler -->
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#sidenav-collapse-main" aria-controls="sidenav-main" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <!-- Brand -->
            <a class="navbar-brand pt-0" href="/Home/Index">
                <img src="~/Content/Admin/img/brand/logo.png" class="navbar-brand-img" alt="...">
            </a>
            <!-- User -->
            <ul class="nav align-items-center d-md-none">
                <li class="nav-item dropdown">
                    <a class="nav-link nav-link-icon" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="ni ni-bell-55"></i>
                    </a>
                    <div class="dropdown-menu dropdown-menu-arrow dropdown-menu-right" aria-labelledby="navbar-default_dropdown_1">
                        <a class="dropdown-item" href="#">Action</a>
                        <a class="dropdown-item" href="#">Another action</a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="#">Something else here</a>
                    </div>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <div class="media align-items-center">
                            <span class="avatar avatar-sm rounded-circle">
                                @if (user.UserImage != null)
                                {
                                    <img alt="Image placeholder" src="~/Images/User/@user.UserImage">
                                }
                                else
                                {
                                    <img alt="Image placeholder" src="~/Content/Customer/img/User.jpg">
                                }
                            </span>
                        </div>
                    </a>
                    <div class="dropdown-menu dropdown-menu-arrow dropdown-menu-right">
                        <div class=" dropdown-header noti-title">
                            <h6 class="text-overflow m-0">Welcome!</h6>
                        </div>
                        <div class="dropdown-divider"></div>
                        <a href="/Account/SignOut" class="dropdown-item">
                            <i class="ni ni-user-run"></i>
                            <span>Logout</span>
                        </a>
                    </div>
                </li>
            </ul>
            <!-- Collapse -->
            <div class="collapse navbar-collapse" id="sidenav-collapse-main">
                <!-- Collapse header -->
                <div class="navbar-collapse-header d-md-none">
                    <div class="row">
                        <div class="col-6 collapse-brand">
                            <a href="./index.html">
                                <img src="~/Content/Admin/img/brand/logo.png">
                            </a>
                        </div>
                        <div class="col-6 collapse-close">
                            <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#sidenav-collapse-main" aria-controls="sidenav-main" aria-expanded="false" aria-label="Toggle sidenav">
                                <span></span>
                                <span></span>
                            </button>
                        </div>
                    </div>
                </div>
                <!-- Navigation -->
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/Admin/Dashboard">
                            <i class="ni ni-tv-2 text-primary"></i> Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Admin/Users/Index">
                            <i class="ni ni-single-02 text-red"></i> Users
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="/Admin/ProductGroups/Index">
                            <i class="ni ni-bullet-list-67 text-red"></i> ProductGroups
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="/Admin/Products/Index">
                            <i class="ni ni-shop text-red"></i> Products
                        </a>
                    </li>

                    @*<li class="nav-item">
                        <a class="nav-link" href="/Admin/Features/Index">
                            <i class="ni ni-shop text-red"></i> Features
                        </a>
                    </li>*@

                    <li class="nav-item">
                        <a class="nav-link" href="/Admin/SliderHeaders/Index">
                            <i class="ni ni-album-2 text-red"></i> Slider Headers
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="/Admin/Brands/Index">
                            <i class="ni ni-like-2 text-red"></i> Brands
                        </a>
                    </li>


                    <li class="nav-item">
                        <a class="nav-link" href="/Admin/IdeaList/Index">
                            <i class="ni ni-bullet-list-67 text-red"></i> Ideas List
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="/Admin/Factors/FactorList/@user.Id">
                            <i class="ni ni-bullet-list-67 text-red"></i> Orders
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="/Admin/SocialNetWorks/Index">
                            <i class="ni ni-settings-gear-65 text-pink"></i> Social NetWorks
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="/Admin/ContactUs/Index">
                            <i class="ni ni-settings-gear-65 text-pink"></i> ContactUs&AboutUs
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="/Admin/Blogs/Index">
                            <i class="ni ni-like-2 text-red"></i> Blogs
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="/Admin/IdeaHeaders/Index">
                            <i class="ni ni-bullet-list-67 text-red"></i> IdeaHeaders
                        </a>
                    </li>
                </ul>
                <!-- Divider -->
                <hr class="my-3">
                <!-- Heading -->
                <!-- Navigation -->
                <ul class="navbar-nav mb-md-3">
                    <li class="nav-item">
                        <a class="nav-link" href="/Admin/Dashboard">
                            <i class="ni ni-spaceship"></i> Getting started
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <!-- Main content -->
    <div class="main-content">
        <!-- Top navbar -->
        <nav class="navbar navbar-top navbar-expand-md navbar-dark" id="navbar-main">
            <div class="container-fluid">
                <!-- Brand -->
                <a class="h4 mb-0 text-white text-uppercase d-none d-lg-inline-block" href="/Admin/Dashboard">Dashboard</a>
                <!-- User -->
                <ul class="navbar-nav align-items-center d-none d-md-flex">
                    <li class="nav-item dropdown">
                        <a class="nav-link pr-0" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <div class="media align-items-center">
                                <span class="avatar avatar-sm rounded-circle">
                                    @if (user.UserImage != null)
                                {
                                    <img alt="Image placeholder" src="~/Images/User/@user.UserImage">
                            }
                            else
                            {
                                <img alt="Image placeholder" src="~/Content/Customer/img/User.jpg">
                        }
                                </span>
                                <div class="media-body ml-2 d-none d-lg-block">
                                    @if (user.UserFirstName != null && user.UserLastName != null)
                                {
                                    <span class="mb-0 text-sm  font-weight-bold">@user.UserFirstName @user.UserLastName</span>
                            }
                            else
                            {
                                <span class="mb-0 text-sm  font-weight-bold">@user.UserEmail</span>
                        }
                                </div>
                            </div>
                        </a>
                        <div class="dropdown-menu dropdown-menu-arrow dropdown-menu-right">
                            <div class=" dropdown-header noti-title">
                                <h6 class="text-overflow m-0">Welcome!</h6>
                            </div>
                            <div class="dropdown-divider"></div>
                            <a href="/Account/SignOut" class="dropdown-item">
                                <i class="ni ni-user-run"></i>
                                <span>Logout</span>
                            </a>
                        </div>
                    </li>
                </ul>
            </div>
        </nav>
        <!-- Header -->
        <div class="header bg-gradient-primary pb-8 pt-5 pt-md-8">

            @RenderBody()

            <!-- Footer -->

        </div>

        <!-- Argon Scripts -->
        <!-- Core -->
        <script src="~/Content/Admin/vendor/jquery/dist/jquery.min.js"></script>
        <script src="~/Content/Admin/vendor/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <!-- Optional JS -->
        <script src="~/Content/Admin/vendor/chart.js/dist/Chart.min.js"></script>
        <script src="~/Content/Admin/vendor/chart.js/dist/Chart.extension.js"></script>
        <!-- Argon JS -->
        <script src="~/Content/Admin/js/argon.js?v=1.0.0"></script>
        @RenderSection("modalscript", false)
        @RenderSection("Scripts", false)
</body>
</html>