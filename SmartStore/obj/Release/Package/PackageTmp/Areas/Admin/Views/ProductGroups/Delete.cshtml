@model SmartStore.Model.Entities.ProductGroup

<link href="https://fonts.googleapis.com/css?family=Roboto|Varela+Round" rel="stylesheet">
<link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">

<div>
    <div class="icon-box" style="width: 80px;
    height: 80px;
    margin: 100px auto;
    border-radius: 50%;
    z-index: 9;
    text-align: center;
    border: 3px solid #f15e5e;
    color: #f15e5e;
    font-size: 46px;
    margin-top: -80px;">
        <i class="material-icons" style="font-size: 50px;margin-top: 10px;">&#xE5CD;</i>
    </div>
    <h3 style="text-align: center;margin-top: -85px;margin-bottom: 50px;">
        Are you sure you want to delete this record?
    </h3>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color" style="text-align:center">
            <input type="submit" value="Yes" class="btn btn-danger" style="padding-right: 50px;padding-left: 50px;" />
            <input type="submit" value="No" class="btn" style="padding-right: 50px;padding-left: 50px;background-color: #c1c1c1;" data-dismiss="modal" />
        </div>
    }
</div>

