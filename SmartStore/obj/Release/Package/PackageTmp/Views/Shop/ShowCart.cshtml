
@model IEnumerable<SmartStore.Models.ShapCartViewModel>



<div class="dropdown-wrapper" id="cartmenu" data-collapse="false">
    <div class="dropdown-wrapper__item">
        @{
            foreach (var item in Model)
            {
                <div class="media">
                    <div class="media__img">
                        <a class="delete-icon" href="/Shop/RemoveFromCart/@item.ProductId"><i class="icon-bin"></i></a>
                        <a href="#"><img src="~/Images/Product/@item.ProductImg" alt=""></a>
                    </div>
                    <div class="media-body">
                        <a href="#"><h6 class="media-title">@item.ProductName</h6></a>
                        <small class="media-details">$@item.ProductPrice</small>
                    </div>
                </div>
            }
        }
    </div>
    <div class="dropdown-divider"></div>
    <div class="dropdown-wrapper__item total-price">
        <span>Total price: <span>$@Model.Sum(p => p.Sum)</span></span>
    </div>
    <div class="dropdown-divider"></div>
    <div class="dropdown-wrapper__item cart-btn">
        @*<a href="/Shop/ShoppingCart" class="btn cart-btn__checkout">Checkout</a>*@
        <a href="/Shop/ShoppingCart" class="btn cart-btn__details">View cart</a>
    </div>
