@model IEnumerable<SmartStore.Model.Entities.Brand>

<div class="widget">
    <div class="widget__heading" id="headingFour">
        <a href="#" class="btn widget__heading--title" data-toggle="collapse"
           data-target="#collapseFour" aria-expanded="true" aria-controls="collapseFour">
            <h3>Brands<span class="widget__heading--icon"></span></h3>
        </a>
    </div>
    <div id="collapseFour" class="collapse show" aria-labelledby="headingFour">
        <div class="widget__body">
            @{
                foreach (var item in Model)
                {

                    <ul class="widget-list">
                        <li class="widget-list__item">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value=""
                                       id="br-02">
                                <label class="form-check-label" for="br-02">
                                    @item.BrandName
                                </label>
                            </div>
                            <span class="badge">30</span>
                        </li>
                    </ul>
                }
            }
        </div>
    </div>
    <!-- form submit button -->
    <!--                            <button type="submit" class="btn submit-btn">Submit widget</button>-->
</div>