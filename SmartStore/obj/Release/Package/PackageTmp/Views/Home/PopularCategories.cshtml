@model IEnumerable<SmartStore.Model.Entities.ProductGroup>

<div class="row mb-100" style="margin:50px">
    <div class="col-12">
        <h2 class="main-title">Popular Categories</h2>
    </div>
    @foreach (var item in Model)
    {
        <div class="col-lg-3 col-sm-6">
            <div class="fancy-box">
                <div class="fancy-box__img">
                    <img src="~/Images/ProductGroup/@item.GroupImage" alt="" style="width:200px; height:200px;">
                </div>
                <div class="fancy-box__inner">
                    <a href="#"><h5 class="title">@item.GroupName</h5></a>
                    <a href="/ProductList/Group/@item.Id" class="link">
                        <span><i class="fa fa-angle-right"></i> </span>
                        View more
                    </a>
                </div>
            </div>
        </div>
    }


</div>