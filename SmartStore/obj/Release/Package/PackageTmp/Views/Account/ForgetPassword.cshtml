@model SmartStore.Models.ForgetPasswordViewModel

@{
    ViewBag.Title = "ForgetPassword";
    Layout = "~/Views/Shared/_Account.cshtml";
}
<div class="container header-mt">
    <div class="row">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb custom-breadcrumb">
                    <li class="breadcrumb-item"><a href="/Home/Index">Home</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Forget Password</li>
                </ol>
            </nav>
        </div>
    </div>
</div>
<div class="main-content pb-100">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-8 col-12 mx-auto">
                <div class="custom-form custom-form--box">
                    <h3 class="custom-form__title">Forget Password</h3>
                    @using (Html.BeginForm("ForgetPassword", "Account", FormMethod.Post, new { @class = "form-group custom-form__input", role = "form" }))
                    {
                        @Html.ValidationMessageFor(model => model.VerificationCode, "", new { @class = "err err-number" })
                        <div class="form-group custom-form__input">
                            @Html.TextBoxFor(m => m.VerificationCode, new { @class = "form-control", @type = "tel", @placeholder = "Verification Code" })
                        </div>

                        @Html.ValidationMessageFor(model => model.UserPassword, "", new { @class = "err err-number" })
                        <div class="form-group custom-form__input">
                            @Html.TextBoxFor(m => m.UserPassword, new { @class = "form-control", @type = "Password", @placeholder = "New Password" })
                        </div>

                        @Html.ValidationMessageFor(model => model.UserRePassword, "", new { @class = "err err-number" })
                        <div class="input-box password-box">
                            @Html.TextBoxFor(m => m.UserRePassword, new { @class = "form-control ltr", @id = "password", @type = "Password", @placeholder = "Confirm New Password" })
                            @*<div class="input-box__icon">
                                <span class="showhidepassword"><i class="far fa-eye-slash"></i></span>
                            </div>*@
                        </div>

                        <div class="forgot-pass">
                            <a href="resetpass.html">
                                <small> </small>
                            </a>
                        </div>
                        <div class="custom-form__btn">
                            <input type="submit" class="btn submit-btn" value="Change" />
                        </div>
                    }
                    <div class="custom-form__footer">
                        <!-- login/sign up with social media -->
                        @*<div class="devider">
                            <span>Sign up with</span>
                        </div>*@
                        @*<div class="social-login">
                            <ul>
                                <li>
                                    <a href="#" class="social-icon fb-icon"><i class="fab fa-facebook"></i></a>
                                </li>
                                <li>
                                    <a href="#" class="social-icon tr-icon"><i class="fab fa-twitter"></i></a>
                                </li>
                                <li>
                                    <a href="#" class="social-icon gl-icon"><i class="fab fa-google"></i></a>
                                </li>
                            </ul>
                        </div>*@
                        <!-- form footer -->
                        @*<div class="custom-form__footer--link">
                            <h6>Already have an account?</h6>
                            <a href="signup.html" class="btn">Login</a>
                        </div>*@
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
