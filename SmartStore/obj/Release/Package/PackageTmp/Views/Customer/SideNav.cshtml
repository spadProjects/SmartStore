@using SmartStore.DataAccess.Context
@using SmartStore.Model.Entities

@{
    SmartStoreContext db = new SmartStoreContext();
    var user = ViewBag.User as User;
}

<nav class="navbar navbar-vertical fixed-left navbar-expand-md navbar-light bg-white" id="sidenav-main">
    <div class="container-fluid">
        <!-- Toggler -->
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#sidenav-collapse-main" aria-controls="sidenav-main" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <!-- Brand -->
        <a class="navbar-brand pt-0" href="/Home/Index">
            <img src="~/Content/Admin/img/brand/logo.png" class="navbar-brand-img" alt="...">
        </a>
        <!-- User -->
        <ul class="nav align-items-center d-md-none">
            <li class="nav-item dropdown">
                <a class="nav-link" href="/Home/Index" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <div class="media align-items-center">
                        <span class="avatar avatar-sm rounded-circle">
                            @if (user.UserImage != null)
                            {
                                <img alt="Image placeholder" src="~/Images/User/@user.UserImage">
                            }
                            else
                            {
                                <img alt="Image placeholder" src="~/Content/Customer/img/User.jpg">
                            }

                        </span>
                    </div>
                </a>
                <div class="dropdown-menu dropdown-menu-arrow dropdown-menu-right">
                    <div class=" dropdown-header noti-title">
                        <h6 class="text-overflow m-0">Welcome!</h6>
                    </div>
                    <a href="/Customer/ChangePassword" class="dropdown-item">
                        <i class="ni ni-calendar-grid-58"></i>
                        <span>Change Password</span>
                    </a>
                    <div class="dropdown-divider"></div>
                    <a href="/Account/SignOut" class="dropdown-item">
                        <i class="ni ni-user-run"></i>
                        <span>Logout</span>
                    </a>
                </div>
            </li>
        </ul>
        <!-- Collapse -->
        <div class="collapse navbar-collapse" id="sidenav-collapse-main">
            <!-- Collapse header -->
            <div class="navbar-collapse-header d-md-none">
                <div class="row">
                    <div class="col-6 collapse-brand">
                        <a href="/Home/Index">
                            <img src="~/Content/Admin/img/brand/logo.png">
                        </a>
                    </div>
                    <div class="col-6 collapse-close">
                        <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#sidenav-collapse-main" aria-controls="sidenav-main" aria-expanded="false" aria-label="Toggle sidenav">
                            <span></span>
                            <span></span>
                        </button>
                    </div>
                </div>
            </div>
            <!-- Navigation -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="#">
                        <i class="ni ni-badge text-success"></i><span style="font-weight:bold">User Code: @user.UserCode</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">
                        <i class="ni ni-atom"></i><span style="font-weight:bold">User Points: @ViewBag.UserPoint</span>
                    </a>
                </li>
                @*<li class="nav-item">
                    <a class="nav-link" href="#">
                        <i class="ni ni-atom"></i><span style="font-weight:bold">User Profit: @ViewBag.userProfit €</span>
                    </a>
                </li>*@
                <li class="nav-item">
                    <a class="nav-link" href="/Customer/Index">
                        <i class="ni ni-tv-2 text-primary"></i> Dashboard
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="/Customer/ProfileEdit/@user.Id">
                        <i class="ni ni-single-02 text-red"></i> Profile Edit
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Customer/FactorList/@user.Id">
                        <i class="ni ni-bullet-list-67 text-red"></i> Orders
                    </a>
                </li>
                @if (user.UserIdentifierCode == null)
                {
                    <li class="nav-item">
                        <a class="nav-link" href="/Customer/IdentifierCodeSearch">
                            <i class="ni ni-pin-3 text-orange"></i> Identifier Code
                        </a>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a class="nav-link" href="/Customer/IntroducersChart">
                            <i class="ni ni-pin-3 text-orange"></i> Introducers Chart
                        </a>
                    </li>
                }
                <li class="nav-item">
                    <a class="nav-link" href="/Customer/ChangePassword">
                        <i class="ni ni-key-25 text-red"></i> Change Password
                    </a>
                </li>
            </ul>
            <!-- Divider -->
            <hr class="my-3">
            <!-- Heading -->
        </div>
    </div>
</nav>