@model IEnumerable<SmartStore.Model.Entities.ProductGroup>

<div class="widget">
    <div class="widget__heading" id="headingOne">
        <a href="#" class="btn widget__heading--title" data-toggle="collapse"
           data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
            <h3>Category<span class="widget__heading--icon"></span></h3>
        </a>
    </div>
    <div id="collapseOne" class="collapse show" aria-labelledby="headingOne">
        <div class="widget__body">
            @{
                foreach (var item in Model)
                {
                    <ul class="widget-list">
                        <li class="widget-list__item">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value=""
                                       id="cat-02">
                                <label class="form-check-label" for="cat-02">
                                    @item.GroupName
                                </label>
                            </div>
                            <span class="badge">30</span>
                        </li>

                    </ul>
                }
            }

        </div>
    </div>
</div>