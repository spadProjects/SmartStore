@model SmartStore.Models.AdminLoginViewModel
@{
    ViewBag.Title = "AdminLogin";
    Layout = "~/Views/Shared/_Account.cshtml";
}

<div class="container header-mt">
    <div class="row">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb custom-breadcrumb">
                    <li class="breadcrumb-item"><a href="/Account/AdminLogin">Home</a></li>
                    <li class="breadcrumb-item active" aria-current="page">AdminLogin</li>
                </ol>
            </nav>
        </div>
    </div>
</div>
<!-- end breadcrumb -->
<!-- main content -->
<div class="main-content pb-100">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-8 col-12 mx-auto">
                <div class="custom-form custom-form--box">
                    <h3 class="custom-form__title">AdminLogin from here</h3>
                    @using (Html.BeginForm("AdminLogin", "Account", FormMethod.Post, new { @class = "form-group custom-form__input", role = "form" }))
                    {
                        @Html.ValidationMessageFor(model => model.UserEmail, "", new { @class = "err err-number" })
                        <div class="form-group custom-form__input">
                            @Html.TextBoxFor(m => m.UserEmail, new { @class = "form-control", @type = "tel", @id = "emailInput", @placeholder = "Email" })
                        </div>

                        @Html.ValidationMessageFor(model => model.UserPassword, "", new { @class = "err err-number" })
                        <div class="input-box password-box">
                            @Html.TextBoxFor(m => m.UserPassword, new { @class = "form-control", @id = "passwordInput", @type = "password", @placeholder = "Password" })
                            <div class="input-box__icon">
                                @*<span class="showhidepassword"><i class="far fa-eye-slash"></i></span>*@
                            </div>
                        </div>
                        <div class="custom-form__btn">
                            <button type="submit" class="btn submit-btn" style="margin-top:20px">Login</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

